 <script>
 // this is a function in class style
function person(first, last, age, eye)
{
    this.firstName = first;
    this.lastName = last;
    this.age = age;
    this.eyeColor = eye;
    this.name=name;
}
 
function name()   // this is a function of the class
{
    return this.firstName + " " + this.lastName
};
 
// adding a new function to the existing class, so name2 is part of the person class(function)
person.prototype.name2 = function()
{
    return this.lastName + ", " +this.firstName  ;
};
 
 
// testing
var my = new person("Robert", "Velazquez", 50, "blue");
document.getElementById("demo").innerHTML = "My name is " + my.name();
document.getElementById("demo").innerHTML += " <br/> My name is " + my.name2();
 
 
