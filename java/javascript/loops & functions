 alert("My Name is "+ fullName)

 // if-then statement
 var number="1"
 if(number=="1")
 {
  alert("Number is 1")
 }
 else
 {
  alert("Number is not one")
 }

 // loop 10 times
 for(i=0;i<10;i++)
 {
   document.write("Hello "+i +"\n")     //use "\n" for new line
 }
 
 //function is a group of code with a name, function return a value
 function addTwoNum(num1, num2)
 {
    return num1+num2
 } 
 
  //test
 var result=addTwoNum(10, 20)
 alert(result)
   
